{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "SUPABASE_*",
        "DATABASE_URL",
        "JWT_SECRET",
        "API_KEY"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "apps/web/.env*",
        "apps/server/.dev.vars"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["@apps/server#build"],
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "SUPABASE_*",
        "DATABASE_URL",
        "JWT_SECRET",
        "PORT"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/web/.env*",
        "apps/server/.dev.vars"
      ]
    }
  }
}
